<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.classicalmusicstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Classical Music"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MozartActivity"
            android:label="Mozart Music List" />
        <activity
            android:name=".BachActivity"
            android:label="Bach Music List" />
        <activity
            android:name=".StravinskyActivity"
            android:label="Stravinskij Music List"/>
        <activity android:name=".BeethovenActivity"
            android:label="Beethoven Music List">
        </activity>
    </application>

</manifest>