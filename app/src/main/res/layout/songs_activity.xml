<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_ten"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:layout_marginTop="@dimen/margin_ten"
    android:orientation="vertical">

    <TextView
        android:id="@+id/song_title"
        style="@style/SongStyle"
        android:layout_marginTop="@dimen/margin"
        android:textSize="@dimen/title_size"
        tools:text="Piano Sonata n.11 - Rondo alla Turca" />

    <TextView
        android:id="@+id/song_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:textSize="@dimen/other_size"
        android:textStyle="italic"
        tools:text="Between 1781 - 1783" />

    <TextView
        android:id="@+id/instrument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:textSize="@dimen/other_size"
        tools:text="Sonata for Piano" />

</LinearLayout>
